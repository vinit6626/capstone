<%- include("../partials/header.ejs") -%>

<div class="container">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="./uploads/<%= product.product_image_path %>" class="img-fluid productimage" alt="Product Image">
            </div>
            <div class="col-md-6 mt-5">
                <h2><%= product.product_title %></h2>
                <p><%= product.product_description %></p>
                <p>SKU: <%= product.product_sku %></p>
                <p>Gender: 
                <% if (product.product_gender === 'm') { %>
                    Male
                <% }else{ %> 
                    Female
                <% }%></p>
                <p>Price: $<%= product.product_price %></p>
                <p>Type: <%= product.product_type.charAt(0).toUpperCase() + product.product_type.slice(1) %></p>

                <p><%= product.product_brand_id %></p>
                
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button">-</button>
                    </div>
                    <input type="text" class="form-control" value="1">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                </div>

                <button class="btn btn-primary">Add to Cart</button>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") -%>
